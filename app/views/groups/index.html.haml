-# .flash-box
  -# .notice
    -# グループを作成しました
.wrapper
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name
          =current_user.name
        %ul.side-header__box__menue
          %li
            = link_to new_group_path do
              = fa_icon 'edit', class: "btn-icon"
          %li
            = link_to edit_user_path(current_user) do
              = fa_icon 'cog', class: "btn-icon"
    .groups
      - current_user.groups.each do |group|
        = link_to group_messages_path(group), class: "group" do
          .group__name
            = group.name
          .group__message
            メッセージはまだありません。
        
  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group
          現在のグループ名
        %ul.main-header__left-box__member-list
          Member : 
          %li.main-header__left-box__member-list__member
            メンバー名

      = link_to "###", class: "main-header__edit-btn" do
        Edit
    .messages
      = render partial: 'message'
    .form
      = form_tag '/', class:  "new_message" do
        .input-box
          %input.input-box__text
          %label.input-box__image
            = fa_icon 'image', class: "input-box__image"
        = submit_tag 'Send', class: "submit-btn"


      

